<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatbotActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:text="Symptom Checker"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/ageInput"
                android:hint="Enter your age"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Spinner
                android:id="@+id/genderSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:entries="@array/gender_options"/>

            <Spinner
                android:id="@+id/durationSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:entries="@array/duration_options"/>

            <TextView android:text="Select symptoms:"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <CheckBox android:id="@+id/feverBox" android:text="Fever"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <CheckBox android:id="@+id/coughBox" android:text="Cough"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <CheckBox android:id="@+id/headacheBox" android:text="Headache"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <CheckBox android:id="@+id/stomachBox" android:text="Stomach Pain"
                android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/locationInput"
                android:hint="Where do you feel discomfort?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView android:text="Pain severity (1â€“10):"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <SeekBar
                android:id="@+id/severityBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="10" />

            <EditText
                android:id="@+id/medicationInput"
                android:hint="Are you taking any medications?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/submitButton"
                android:text="Submit"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/resultText"
                android:text=""
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/symptomInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g. Fever and cough" />
            <Button
                android:id="@+id/micButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽ™ï¸ Speak Symptoms"
                android:layout_marginTop="12dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consult a Doctor"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/Consult_a_Doctor"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>